<!DOCTYPE html>
<html lang="en">
  <head>
    {{>header}}
  </head>
  <body>
    {{>navbar}}

    <!-- Header -->
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
          <div class="main_content">
            <form class="temp_form">
              <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off"/>
              <input type="submit" value="Search" id="submitBtn">
            </form>

            <div class="tempInformation col-12 mx-auto">
              <div class="top_layer">
                <p id="day">Tuesday</p>
                <p id="today_date">13 OCT</p>
              </div>
              <div class="main_layer col-sm-10 mx-auto">
                <p id="city_name">Get Output here</p>
                <div class="middle_layer data_hide">
                  <p id="temp"><span id="real_temp">0</span><sup>o</sup>C</p>
                  <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                </div>
                <div class="report">
                <p id="desc"></p>
              </div>
              </div>
              

            </div>
          </div>
        </div>
      </div>
    </div>
    <footer>
      <p>
        <i class="fa fa-copyright" aria-hidden="true">
          Rajeev Bhumaik Solutions</i
        >
      </p>
    </footer>
    <script src="js/main.js"></script>
  </body>
</html>
